{
  "name": "budget-tool",
  "version": "1.0.0",
  "description": "A budget application that utilizes the PLAID api to pull in transaction level detail and create a smart budget based on historical trends.",
  "engines": {
    "node": "8.6.x"
  },
  "scripts": {
    "start": "node server",
    "heroku-postbuild": "cd frontend/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha ./server/tests/*",
    "precommit": "lint-staged"
  },
  "cacheDirectories": [
    "node_modules",
    "frontend/node_modules"
  ],
  "dependencies": {
    "axios": "^0.17.1",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "husky": "^0.14.3",
    "jsonwebtoken": "^7.4.3",
    "knex": "^0.13.0",
    "lint-staged": "^4.1.3",
    "pg": "^7.3.0",
    "plaid": "^2.6.2",
    "prettier": "^1.6.1"
  },
  "lint-staged": {
    "{server,db,frontend}/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.1.1",
    "chai-http": "^3.0.0",
    "mocha": "^3.5.0"
  }
}
